@model ShopSana.Models.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row g-4 mb-4">
    <div class="col-lg-3 col-md-6">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <p class="text-muted mb-1">Total Revenue</p>
                    <h3 class="mb-0">$@Model.TotalRevenue.ToString("N2")</h3>
                </div>
                <div class="icon bg-success text-white">
                    <i class="bi bi-currency-dollar"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <p class="text-muted mb-1">Total Orders</p>
                    <h3 class="mb-0">@Model.TotalOrders</h3>
                </div>
                <div class="icon bg-primary text-white">
                    <i class="bi bi-bag"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <p class="text-muted mb-1">Total Products</p>
                    <h3 class="mb-0">@Model.TotalProducts</h3>
                </div>
                <div class="icon bg-info text-white">
                    <i class="bi bi-box-seam"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <p class="text-muted mb-1">Total Users</p>
                    <h3 class="mb-0">@Model.TotalUsers</h3>
                </div>
                <div class="icon bg-warning text-dark">
                    <i class="bi bi-people"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mb-4">
    <div class="col-lg-3 col-md-6">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <p class="text-muted mb-1">Today's Revenue</p>
                    <h3 class="mb-0 text-success">$@Model.TodayRevenue.ToString("N2")</h3>
                </div>
                <div class="icon bg-light">
                    <i class="bi bi-graph-up text-success"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <p class="text-muted mb-1">Pending Orders</p>
                    <h3 class="mb-0 text-warning">@Model.PendingOrders</h3>
                </div>
                <div class="icon bg-light">
                    <i class="bi bi-clock text-warning"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-8">
        <div class="table-card">
            <div class="p-3 border-bottom">
                <h5 class="mb-0"><i class="bi bi-clock-history"></i> Recent Orders</h5>
            </div>
            <div class="table-responsive">
                <table class="table mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th>Order #</th>
                            <th>Customer</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Date</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.RecentOrders)
                        {
                            <tr>
                                <td><strong>@order.OrderNumber</strong></td>
                                <td>@order.User?.FullName</td>
                                <td>$@order.TotalAmount.ToString("F2")</td>
                                <td>
                                    @{
                                        var statusClass = order.Status switch
                                        {
                                            ShopSana.Models.Entities.OrderStatus.Pending => "bg-warning text-dark",
                                            ShopSana.Models.Entities.OrderStatus.Processing => "bg-info",
                                            ShopSana.Models.Entities.OrderStatus.Shipped => "bg-primary",
                                            ShopSana.Models.Entities.OrderStatus.Delivered => "bg-success",
                                            ShopSana.Models.Entities.OrderStatus.Cancelled => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @statusClass">@order.Status</span>
                                </td>
                                <td>@order.OrderDate.ToString("MMM dd")</td>
                                <td>
                                    <a asp-controller="Orders" asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">
                                        View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="p-3 border-top">
                <a asp-controller="Orders" asp-action="Index" class="text-primary text-decoration-none">View All Orders →</a>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="table-card">
            <div class="p-3 border-bottom">
                <h5 class="mb-0"><i class="bi bi-exclamation-triangle text-warning"></i> Low Stock Products</h5>
            </div>
            <div class="p-3">
                @if (Model.LowStockProducts.Any())
                {
                    @foreach (var product in Model.LowStockProducts.Take(5))
                    {
                        <div class="d-flex align-items-center mb-3">
                            <img src="@(product.ImageUrl ?? "https://via.placeholder.com/50")" alt="@product.Name" class="rounded me-3" style="width: 50px; height: 50px; object-fit: cover;">
                            <div class="flex-grow-1">
                                <h6 class="mb-0 small">@product.Name</h6>
                                <span class="badge bg-danger small">@product.StockQuantity left</span>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted mb-0 text-center">No low stock products</p>
                }
            </div>
            <div class="p-3 border-top">
                <a asp-controller="Products" asp-action="Index" class="text-primary text-decoration-none">Manage Products →</a>
            </div>
        </div>
    </div>
</div>
