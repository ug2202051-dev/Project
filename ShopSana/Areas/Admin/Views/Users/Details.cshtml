@model ShopSana.Models.Entities.ApplicationUser
@{
    ViewData["Title"] = $"User: {Model.FullName}";
    var roles = ViewBag.Roles as IList<string>;
}

<div class="row">
    <div class="col-lg-4">
        <div class="table-card text-center p-4">
            <div class="mb-3">
                <i class="bi bi-person-circle text-primary" style="font-size: 80px;"></i>
            </div>
            <h4>@Model.FullName</h4>
            <p class="text-muted">@Model.Email</p>
            <div class="mb-3">
                @if (roles != null)
                {
                    @foreach (var role in roles)
                    {
                        <span class="badge bg-primary me-1">@role</span>
                    }
                }
            </div>
            @if (Model.IsActive)
            {
                <span class="badge bg-success fs-6">Active</span>
            }
            else
            {
                <span class="badge bg-secondary fs-6">Inactive</span>
            }

            <hr>

            <form asp-action="ToggleActive" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn @(Model.IsActive ? "btn-outline-danger" : "btn-outline-success")">
                    <i class="bi @(Model.IsActive ? "bi-x-circle" : "bi-check-circle")"></i>
                    @(Model.IsActive ? "Deactivate User" : "Activate User")
                </button>
            </form>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="table-card">
            <div class="p-3 border-bottom">
                <h5 class="mb-0">User Details</h5>
            </div>
            <div class="p-3">
                <div class="row mb-3">
                    <div class="col-md-4 text-muted">Full Name:</div>
                    <div class="col-md-8">@Model.FullName</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4 text-muted">Email:</div>
                    <div class="col-md-8">@Model.Email</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4 text-muted">Phone:</div>
                    <div class="col-md-8">@(Model.PhoneNumber ?? "Not provided")</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4 text-muted">Address:</div>
                    <div class="col-md-8">@(Model.Address ?? "Not provided")</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4 text-muted">City:</div>
                    <div class="col-md-8">@(Model.City ?? "Not provided")</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4 text-muted">Postal Code:</div>
                    <div class="col-md-8">@(Model.PostalCode ?? "Not provided")</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4 text-muted">Country:</div>
                    <div class="col-md-8">@(Model.Country ?? "Not provided")</div>
                </div>
                <hr>
                <div class="row mb-3">
                    <div class="col-md-4 text-muted">Registered:</div>
                    <div class="col-md-8">@Model.CreatedAt.ToString("MMMM dd, yyyy hh:mm tt")</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4 text-muted">Last Login:</div>
                    <div class="col-md-8">@(Model.LastLoginAt?.ToString("MMMM dd, yyyy hh:mm tt") ?? "Never")</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4 text-muted">Email Confirmed:</div>
                    <div class="col-md-8">
                        @if (Model.EmailConfirmed)
                        {
                            <span class="badge bg-success">Yes</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">No</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Users
    </a>
</div>
