@model ShopSana.Models.ViewModels.AdminOrderListViewModel
@{
    ViewData["Title"] = "Manage Orders";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <form class="d-flex" asp-action="Index" method="get">
        <input type="text" name="search" class="form-control me-2" placeholder="Search orders..." value="@Model.SearchTerm" style="width: 250px;">
        <select name="status" class="form-select me-2" style="width: 180px;">
            <option value="">All Status</option>
            @foreach (ShopSana.Models.Entities.OrderStatus status in Enum.GetValues(typeof(ShopSana.Models.Entities.OrderStatus)))
            {
                <option value="@status" selected="@(Model.StatusFilter == status)">@status</option>
            }
        </select>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search"></i>
        </button>
    </form>
</div>

<div class="table-card">
    <div class="table-responsive">
        <table class="table mb-0">
            <thead class="bg-light">
                <tr>
                    <th>Order #</th>
                    <th>Customer</th>
                    <th>Items</th>
                    <th>Total</th>
                    <th>Payment</th>
                    <th>Status</th>
                    <th>Date</th>
                    <th style="width: 100px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.Orders)
                {
                    <tr>
                        <td><strong>@order.OrderNumber</strong></td>
                        <td>
                            @order.User?.FullName
                            <br><small class="text-muted">@order.User?.Email</small>
                        </td>
                        <td><span class="badge bg-info">@order.OrderItems.Count items</span></td>
                        <td><strong>$@order.TotalAmount.ToString("F2")</strong></td>
                        <td>
                            @{
                                var paymentClass = order.PaymentStatus == ShopSana.Models.Entities.PaymentStatus.Paid ? "bg-success" : "bg-warning text-dark";
                            }
                            <span class="badge @paymentClass">@order.PaymentStatus</span>
                        </td>
                        <td>
                            @{
                                var statusClass = order.Status switch
                                {
                                    ShopSana.Models.Entities.OrderStatus.Pending => "bg-warning text-dark",
                                    ShopSana.Models.Entities.OrderStatus.Processing => "bg-info",
                                    ShopSana.Models.Entities.OrderStatus.Shipped => "bg-primary",
                                    ShopSana.Models.Entities.OrderStatus.Delivered => "bg-success",
                                    ShopSana.Models.Entities.OrderStatus.Cancelled => "bg-danger",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @statusClass">@order.Status</span>
                        </td>
                        <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">
                                View
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (Model.TotalPages > 1)
    {
        <div class="p-3 border-top">
            <nav>
                <ul class="pagination mb-0 justify-content-center">
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-status="@Model.StatusFilter" asp-route-search="@Model.SearchTerm">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    }
</div>
