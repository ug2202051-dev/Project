@{
    ViewData["Title"] = "Contact Us";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-6 mb-4 mb-lg-0">
            <h1 class="display-5 fw-bold mb-4">Get in Touch</h1>
            <p class="lead text-muted mb-4">We'd love to hear from you. Send us a message and we'll respond as soon as possible.</p>
            
            <div class="mb-4">
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-geo-alt-fill text-primary fs-4 me-3"></i>
                    <div>
                        <h6 class="mb-0">Address</h6>
                        <p class="text-muted mb-0">123 Shopping Street, Commerce City, ST 12345</p>
                    </div>
                </div>
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-envelope-fill text-primary fs-4 me-3"></i>
                    <div>
                        <h6 class="mb-0">Email</h6>
                        <p class="text-muted mb-0">support@shopsana.com</p>
                    </div>
                </div>
                <div class="d-flex align-items-center mb-3">
                    <i class="bi bi-telephone-fill text-primary fs-4 me-3"></i>
                    <div>
                        <h6 class="mb-0">Phone</h6>
                        <p class="text-muted mb-0">+1 (234) 567-8900</p>
                    </div>
                </div>
                <div class="d-flex align-items-center">
                    <i class="bi bi-clock-fill text-primary fs-4 me-3"></i>
                    <div>
                        <h6 class="mb-0">Business Hours</h6>
                        <p class="text-muted mb-0">Monday - Friday: 9:00 AM - 6:00 PM</p>
                    </div>
                </div>
            </div>

            <div>
                <h5>Follow Us</h5>
                <a href="#" class="btn btn-outline-primary me-2"><i class="bi bi-facebook"></i></a>
                <a href="#" class="btn btn-outline-primary me-2"><i class="bi bi-twitter"></i></a>
                <a href="#" class="btn btn-outline-primary me-2"><i class="bi bi-instagram"></i></a>
                <a href="#" class="btn btn-outline-primary"><i class="bi bi-linkedin"></i></a>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <h4 class="card-title mb-4">Send us a Message</h4>
                    <form>
                        <div class="mb-3">
                            <label for="name" class="form-label">Your Name</label>
                            <input type="text" class="form-control" id="name" placeholder="John Doe" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="email" placeholder="john@example.com" required>
                        </div>
                        <div class="mb-3">
                            <label for="subject" class="form-label">Subject</label>
                            <input type="text" class="form-control" id="subject" placeholder="How can we help?" required>
                        </div>
                        <div class="mb-3">
                            <label for="message" class="form-label">Message</label>
                            <textarea class="form-control" id="message" rows="5" placeholder="Your message here..." required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-send"></i> Send Message
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
