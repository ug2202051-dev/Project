@{
    ViewData["Title"] = "About Us";
}

<div class="container py-5">
    <div class="row align-items-center mb-5">
        <div class="col-lg-6 mb-4 mb-lg-0">
            <img src="https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?w=600" alt="About ShopSana" class="img-fluid rounded shadow">
        </div>
        <div class="col-lg-6">
            <h1 class="display-5 fw-bold mb-4">About ShopSana</h1>
            <p class="lead text-muted mb-4">Your trusted online shopping destination since 2024</p>
            <p>ShopSana is a modern e-commerce platform built with cutting-edge technology to provide you with the best online shopping experience. We offer a wide range of products from electronics to fashion, home goods to sports equipment.</p>
            <p>Our mission is to make quality products accessible to everyone at competitive prices, while providing exceptional customer service and a seamless shopping experience.</p>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm text-center p-4">
                <i class="bi bi-award fs-1 text-primary mb-3"></i>
                <h4>Quality Products</h4>
                <p class="text-muted">We carefully curate our products to ensure you get only the best quality items.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm text-center p-4">
                <i class="bi bi-people fs-1 text-primary mb-3"></i>
                <h4>Customer First</h4>
                <p class="text-muted">Our customers are at the heart of everything we do. Your satisfaction is our priority.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm text-center p-4">
                <i class="bi bi-graph-up-arrow fs-1 text-primary mb-3"></i>
                <h4>Growing Together</h4>
                <p class="text-muted">We're constantly improving and expanding to serve you better.</p>
            </div>
        </div>
    </div>

    <div class="bg-primary text-white rounded p-5 text-center">
        <h2 class="mb-4">Our Technology Stack</h2>
        <div class="row g-4">
            <div class="col-md-3">
                <h5><i class="bi bi-code-square"></i></h5>
                <p>ASP.NET Core MVC</p>
            </div>
            <div class="col-md-3">
                <h5><i class="bi bi-database"></i></h5>
                <p>MySQL Database</p>
            </div>
            <div class="col-md-3">
                <h5><i class="bi bi-shield-lock"></i></h5>
                <p>ASP.NET Identity</p>
            </div>
            <div class="col-md-3">
                <h5><i class="bi bi-bootstrap"></i></h5>
                <p>Bootstrap 5</p>
            </div>
        </div>
    </div>
</div>
