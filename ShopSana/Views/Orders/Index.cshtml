@model ShopSana.Models.ViewModels.OrderListViewModel
@{
    ViewData["Title"] = "My Orders";
}

<div class="container py-5">
    <h2 class="mb-4"><i class="bi bi-bag"></i> My Orders</h2>

    @if (!Model.Orders.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-bag-x text-muted" style="font-size: 80px;"></i>
            <h4 class="mt-3">No orders yet</h4>
            <p class="text-muted">You haven't placed any orders yet.</p>
            <a asp-controller="Products" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-bag"></i> Start Shopping
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var order in Model.Orders)
            {
                <div class="col-12">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white py-3">
                            <div class="d-flex justify-content-between align-items-center flex-wrap">
                                <div>
                                    <h6 class="mb-1">Order #@order.OrderNumber</h6>
                                    <small class="text-muted">Placed on @order.OrderDate.ToString("MMMM dd, yyyy")</small>
                                </div>
                                <div>
                                    @{
                                        var statusClass = order.Status switch
                                        {
                                            ShopSana.Models.Entities.OrderStatus.Pending => "bg-warning text-dark",
                                            ShopSana.Models.Entities.OrderStatus.Processing => "bg-info",
                                            ShopSana.Models.Entities.OrderStatus.Shipped => "bg-primary",
                                            ShopSana.Models.Entities.OrderStatus.Delivered => "bg-success",
                                            ShopSana.Models.Entities.OrderStatus.Cancelled => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @statusClass">@order.Status</span>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <p class="mb-1"><strong>@order.OrderItems.Count item(s)</strong></p>
                                    <p class="text-muted mb-0 small">
                                        @string.Join(", ", order.OrderItems.Select(i => i.ProductName).Take(3))
                                        @if (order.OrderItems.Count > 3)
                                        {
                                            <span>and @(order.OrderItems.Count - 3) more</span>
                                        }
                                    </p>
                                </div>
                                <div class="text-end">
                                    <h5 class="text-primary mb-1">$@order.TotalAmount.ToString("F2")</h5>
                                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-outline-primary btn-sm">
                                        View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)">Next</a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>
